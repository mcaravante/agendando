# Zoom OAuth
ZOOM_CLIENT_ID=
ZOOM_CLIENT_SECRET=
ZOOM_REDIRECT_URI=http://localhost:3000/api/integrations/zoom/callback

# Redis (for job queue)
REDIS_URL=redis://localhost:6379
